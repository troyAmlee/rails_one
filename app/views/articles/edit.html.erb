<!DOCTYPE html>


  <h1>Editing Article <%= @article.id %></h1>
  <button><%= link_to 'Home', '/' %></button>
  <button><%= link_to 'About', '/about' %></button>
  <button><%= link_to 'Articles', '/articles' %></button>
  <button><%= link_to 'Create New Article', "/articles/new" %></button>
  <% if @article.errors.any? %>
    <h2>The following errors prevented the article from getting created...</h2>
    <ul>
      <% @article.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>

  <%= form_for @article do |f| %>
    <p>
      <%= f.label :title %><br/>
      <%= f.text_field :title %>
    </p>
    <p>
      <%= f.label :description %><br/>
      <%= f.text_area :description %>
    </p>
  <p>
    <%= f.label :content %><br/>
    <%= f.text_area :content %>
  </p>
    <p>
      <%= f.submit %>
    <button>
      <%= link_to 'Destroy', article_path(@article),
                    method: :delete,
                    data: { confirm: 'Are you sure?' } %>
    </button>
    </p>

  <% end %>



